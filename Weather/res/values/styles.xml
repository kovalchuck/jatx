<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="WeatherActionBar" 
	    	parent="@style/Widget.AppCompat.ActionBar">
	    <item name="android:titleTextStyle">@style/WeatherActionBarTitleText</item>
	    <item name="android:background">@color/yellow_dark</item>
	    <item name="android:icon">@android:color/transparent</item>
	</style>
	
	<style name="WeatherActionBarTitleText" 
	    	parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textSize">20dp</item>
	    <item name="android:textColor">@color/black</item>
	</style>
	
	<style name="WeatherStyle" 
			parent="@style/Theme.AppCompat">
	    <item name="android:actionBarStyle">@style/WeatherActionBar</item>    
	</style>
	
	<style name="WeatherBackButton" 
	    	parent="@style/WeatherStyle">
		<item name="android:homeAsUpIndicator">@drawable/ic_back</item>   
	</style>
	
</resources>